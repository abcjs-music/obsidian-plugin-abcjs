{
  "compilerOptions": {
    "baseUrl": "src",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es5",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": ["dom", "es5", "scripthost", "es2015"],
    "typeRoots": ["node_modules/@types", "src/types/"]
  },
  "include": ["src/**/*.ts"]
}